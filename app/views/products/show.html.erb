<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  
  <!-- Breadcrumbs -->
  <div class="text-xs text-gray-500 mb-6 flex items-center gap-2 font-medium">
    <a href="#" class="hover:underline">무신사 스토어</a>
    <span>&gt;</span>
    <a href="#" class="hover:underline"><%= @product.category || "상의" %></a>
    <span>&gt;</span>
    <span class="text-black font-bold"><%= @product.brand %></span>
  </div>

  <div class="flex flex-col lg:flex-row gap-12 relative">
    
    <!-- Left: Sticky Image Gallery -->
    <div class="w-full lg:w-[55%] flex flex-col gap-4">
      <!-- Main Image -->
      <div class="w-full bg-gray-50 aspect-[4/5] relative overflow-hidden group">
         <% if @product.respond_to?(:image_url) && @product.image_url.present? %>
            <img src="<%= @product.image_url %>" class="w-full h-full object-cover">
         <% else %>
            <div class="w-full h-full flex flex-col items-center justify-center text-gray-300">
                <span class="text-xs font-bold tracking-widest">No Image</span>
            </div>
         <% end %>
         <!-- Zoom Icon Visual -->
         <button class="absolute bottom-4 right-4 bg-white/80 p-2 rounded-full opacity-0 group-hover:opacity-100 transition-opacity hover:bg-white shadow-sm">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m-3-3h6"></path></svg>
         </button>
      </div>

      <!-- Thumbnail Grid (Visual Mock) -->
      <div class="grid grid-cols-5 gap-2">
         <% 5.times do |i| %>
           <div class="aspect-[4/5] bg-gray-100 cursor-pointer border border-transparent hover:border-black transition-all relative overflow-hidden">
              <% if i == 0 && @product.respond_to?(:image_url) && @product.image_url.present? %>
                <img src="<%= @product.image_url %>" class="w-full h-full object-cover opacity-60 hover:opacity-100">
              <% else %>
                <!-- Mock Thumb -->
                <div class="w-full h-full bg-gray-200"></div>
              <% end %>
           </div>
         <% end %>
      </div>

      <!-- Product Detail Content (Long Image Placeholder) -->
      <div class="mt-12 border-t pt-10">
         <h3 class="font-bold text-lg mb-4 font-oswald border-b border-black pb-2">PRODUCT DETAIL</h3>
         <div class="w-full bg-gray-100 h-[800px] flex items-center justify-center text-gray-400 text-sm">
            상세 이미지 영역
         </div>
      </div>
    </div>

    <!-- Right: Sticky Product Info -->
    <div class="w-full lg:w-[45%] relative">
      <div class="sticky top-24 space-y-6">
        
        <!-- Header Info -->
        <div class="border-b border-gray-200 pb-6">
            <div class="flex justify-between items-start mb-2">
                <a href="#" class="text-sm font-bold text-black border-b border-black hover:text-gray-600 transition-colors"><%= @product.brand %> &gt;</a>
                
                <div class="flex gap-2">
                    <button class="text-gray-400 hover:text-red-500"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg></button>
                    <button class="text-gray-400 hover:text-black"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path></svg></button>
                </div>
            </div>
            
            <h1 class="text-[22px] font-bold text-gray-900 leading-snug mb-3"><%= @product.name %></h1>
            
            <div class="flex items-center gap-2 mb-1">
                 <div class="flex text-black">
                    <% 5.times do %>
                       <svg class="w-3.5 h-3.5 fill-current" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg> 
                    <% end %>
                 </div>
                 <span class="text-xs font-bold underline decoration-gray-300 underline-offset-2"><%= @reviews.count %> 후기</span>
            </div>
        </div>

        <!-- Price Panel -->
        <div class="space-y-3">
            <div class="flex justify-between items-center text-sm">
                <span class="text-gray-500 font-medium w-24">무신사 판매가</span>
                <span class="flex-1 font-bold text-gray-400 line-through decoration-gray-400"><%= number_to_currency(@product.price * 1.3, unit: "", precision: 0) %>원</span>
            </div>
            <div class="flex justify-between items-center">
                <span class="text-gray-500 font-medium text-sm w-24">회원 할인가</span>
                <div class="flex-1 flex items-end gap-2">
                    <span class="text-3xl font-bold text-black tracking-tight"><%= number_to_currency(@product.price, unit: "", precision: 0) %></span>
                    <span class="text-xl font-bold text-black">원</span>
                    <span class="text-xl font-bold text-red-600 mb-1 ml-1">30%</span>
                </div>
            </div>
            
            <!-- Tags -->
            <div class="flex gap-2 pt-2">
                <span class="px-2 py-1 bg-violet-600 text-white text-[10px] font-bold rounded-sm">무신사 회원 적용가</span>
                <span class="px-2 py-1 bg-gray-100 text-gray-600 text-[10px] font-bold rounded-sm border border-gray-200">무료배송</span>
            </div>
        </div>
        
        <div class="h-px bg-gray-200 my-6"></div>

        <!-- Info Table -->
        <div class="text-xs space-y-3 text-gray-600 font-medium">
            <div class="flex">
                <span class="w-24 text-gray-400">적립금</span>
                <span>최대 <%= (@product.price * 0.05).to_i %>원</span>
            </div>
            <div class="flex">
                <span class="w-24 text-gray-400">무이자할부</span>
                <span>최대 6개월 (5만원 이상 목요일 더 드림)</span>
            </div>
            <div class="flex">
                <span class="w-24 text-gray-400">배송정보</span>
                <span>내일 도착 예정 (오후 2시 이전 주문 시)</span>
            </div>
        </div>

        <!-- Option Selection -->
        <div class="bg-gray-50 p-4 border border-gray-200 mt-6">
            <select class="w-full bg-white border border-gray-300 text-sm font-medium py-2.5 mb-3 focus:ring-black focus:border-black rounded-none">
                <option>옵션 1. 사이즈 선택</option>
                <option>S (재고 3)</option>
                <option>M (품절임박)</option>
                <option>L (예약배송)</option>
                <option>XL</option>
            </select>
            
            <!-- Selected Item Preview -->
            <div class="bg-white border border-gray-200 p-3 flex justify-between items-center mt-2 hidden">
                <span class="text-sm font-bold">M</span>
                <div class="flex items-center gap-4">
                     <div class="flex border border-gray-300">
                        <button class="px-2 bg-gray-50">-</button>
                        <input type="text" value="1" class="w-8 text-center text-xs border-0 py-1">
                        <button class="px-2 bg-gray-50">+</button>
                     </div>
                     <span class="font-bold text-sm"><%= number_to_currency(@product.price, unit: "", precision: 0) %>원</span>
                     <button class="text-gray-400 hover:text-black">X</button>
                </div>
            </div>
        </div>

        <!-- Total Price -->
        <div class="flex justify-between items-end border-t border-black pt-4 mt-6">
            <span class="font-bold text-sm">총 상품 금액</span>
            <span class="font-bold text-2xl text-black">0원</span>
        </div>

        <!-- Action Buttons -->
        <div class="flex gap-2 mt-4 h-14">
            <button class="flex-1 bg-black text-white font-bold text-lg hover:bg-gray-800 transition-colors">바로구매</button>
            <button class="flex-1 border border-gray-300 bg-white text-black font-bold text-lg hover:border-black transition-colors">장바구니</button>
            <button class="w-14 border border-gray-300 bg-white flex items-center justify-center hover:border-red-400 hover:text-red-500 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
            </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Review Section (Full Width below) -->
  <div class="mt-24 border-t-2 border-gray-200 pt-10 max-w-5xl">
       <div class="flex items-center justify-between mb-8">
           <h3 class="text-xl font-bold font-oswald text-black">구매 후기 (<%= @reviews.count %>)</h3>
           <a href="#" class="text-xs text-gray-500 underline">전체보기</a>
       </div>

       <!-- Review Stats -->
       <div class="bg-gray-50 p-6 flex flex-col md:flex-row items-center justify-center gap-10 rounded-sm mb-10 text-center md:text-left">
           <div class="text-center">
               <div class="text-4xl font-black text-black mb-1">4.8</div>
               <div class="flex justify-center text-yellow-400 mb-2 text-sm">★★★★★</div>
               <p class="text-xs text-gray-400">95% 만족</p>
           </div>
           
           <div class="hidden md:block w-px h-16 bg-gray-200"></div>
           
           <div class="flex-1 w-full max-w-sm">
                <div class="space-y-2">
                    <div class="flex items-center text-xs">
                        <span class="w-12 text-gray-500">사이즈</span>
                        <div class="flex-1 h-1.5 bg-gray-200 rounded-full mx-2"><div class="w-[80%] h-full bg-black rounded-full"></div></div>
                        <span class="text-gray-900 font-bold">적당함</span>
                    </div>
                    <div class="flex items-center text-xs">
                        <span class="w-12 text-gray-500">밝기</span>
                        <div class="flex-1 h-1.5 bg-gray-200 rounded-full mx-2"><div class="w-[60%] h-full bg-gray-400 rounded-full"></div></div>
                        <span class="text-gray-900 font-bold">보통</span>
                    </div>
                </div>
           </div>
       </div>

       <div class="space-y-0 divide-y divide-gray-100">
        <% @reviews.each do |review| %>
            <div class="py-6 flex gap-6">
                <!-- User Profile -->
                <div class="w-24 flex-shrink-0 hidden md:block">
                     <div class="w-10 h-10 bg-gray-200 rounded-full mb-2 overflow-hidden">
                         <img src="https://ui-avatars.com/api/?name=<%= review.user.name %>&background=random" class="w-full h-full object-cover">
                     </div>
                     <p class="text-xs font-bold text-gray-900 truncate"><%= review.user.name %></p>
                     <p class="text-[10px] text-gray-400 mt-1"><%= review.height %>cm <%= review.weight %>kg</p>
                </div>

                <div class="flex-1">
                    <div class="flex justify-between items-start mb-2">
                         <div class="flex items-center gap-2">
                            <span class="text-yellow-400 text-xs">★★★★★</span>
                            <span class="text-[11px] text-gray-400 font-medium">L 사이즈 구매</span>
                         </div>
                         <span class="text-[10px] text-gray-300"><%= review.created_at.strftime("%Y.%m.%d") %></span>
                    </div>
                    
                    <p class="text-sm text-gray-700 leading-relaxed mb-3"><%= review.content %></p>
                    
                    <!-- Review Photos (Mock) -->
                     <% if rand > 0.5 %>
                        <div class="flex gap-2">
                            <div class="w-20 h-24 bg-gray-100 rounded-sm overflow-hidden cursor-pointer border border-transparent hover:border-black">
                                <img src="<%= @product.image_url %>" class="w-full h-full object-cover">
                            </div>
                        </div>
                     <% end %>
                </div>
            </div>
        <% end %>
       </div>
  </div>
</div>
