<div class="max-w-[1600px] mx-auto px-4 md:px-8 py-6">
  <!-- Top Banner Section (Optional but good for layout) -->
  <div class="flex items-center justify-between mb-4 border-b border-black pb-3">
      <h2 class="text-xl font-bold font-oswald text-black tracking-tight">무신사 랭킹</h2>
      <div class="text-[11px] text-gray-500 font-medium">
        <%= Time.current.strftime("%m.%d %H:00") %> 갱신
      </div>
  </div>

  <!-- Detailed Category Filter -->
  <div class="flex flex-wrap gap-2 mb-8">
     <%= link_to "전체", root_path(q: params[:q], sort: params[:sort]), class: "px-3 py-1.5 text-xs font-bold border transition-all #{params[:category].blank? || params[:category] == '전체' ? 'bg-black text-white border-black' : 'bg-white text-gray-400 border-gray-200 hover:border-gray-400 hover:text-black'}" %>
     
     <% ["상의", "아우터", "바지", "원피스", "스커트", "가방"].each do |cat| %>
        <%= link_to cat, root_path(category: cat, q: params[:q], sort: params[:sort]), class: "px-3 py-1.5 text-xs font-medium border transition-all #{params[:category] == cat ? 'bg-black text-white border-black font-bold' : 'bg-white text-gray-400 border-gray-200 hover:border-gray-400 hover:text-black'}" %>
     <% end %>
  </div>

  <% if params[:q].present? %>
    <div class="mb-6 text-sm">
        <span class="font-bold text-black">"<%= params[:q] %>"</span> 검색 결과
        <a href="<%= root_path %>" class="ml-2 text-gray-400 hover:text-red-500 text-xs underline">초기화</a>
    </div>
  <% end %>

  <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-x-2 gap-y-8 sm:gap-x-4">
    <% @ranked_products.each_with_index do |product, index| %>
      <%= link_to product_path(product), class: "group block relative" do %>
        
        <div class="relative w-full aspect-[4/5] bg-gray-100 overflow-hidden mb-3">
             <% if product.respond_to?(:image_url) && product.image_url.present? %>
                <img src="<%= product.image_url %>" alt="<%= product.name %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
            <% else %>
                <div class="w-full h-full flex flex-col items-center justify-center text-gray-300 bg-gray-50">
                    <span class="text-[10px] uppercase font-bold tracking-widest">No Image</span>
                </div>
            <% end %>

            <!-- Ranking Badge Overlay -->
            <div class="absolute top-0 left-0">
                <div class="bg-black/90 text-white font-oswald text-lg px-2.5 py-1 leading-none font-bold">
                    <%= index + 1 %>
                </div>
            </div>
            
            <!-- User Like Interaction (Visual) -->
            <div class="absolute bottom-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                <div class="w-8 h-8 rounded-full bg-white/90 flex items-center justify-center shadow-sm text-gray-400 hover:text-red-500">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                    </svg>
                </div>
            </div>
        </div>
        
        <div class="px-1">
            <p class="text-[11px] font-bold text-black uppercase tracking-tight mb-1 truncate hover:underline hover:text-gray-600"><%= product.brand %></p>
            <h3 class="text-[13px] text-gray-600 leading-tight mb-2 line-clamp-2 h-8 group-hover:text-black transition-colors"><%= product.name %></h3>
            
            <div class="flex items-end justify-between mt-auto">
                <div>
                   <span class="font-bold text-[15px] text-black tracking-tight"><%= number_to_currency(product.price, unit: "", precision: 0) %>원</span>
                   <% if index < 5 %>
                     <span class="block text-[11px] font-bold text-red-600 mt-0.5">30% SALE</span>
                   <% end %>
                </div>
                <div class="text-[10px] text-gray-400 font-medium text-right flex flex-col items-end">
                    <span class="mb-0.5">구매 <%= number_to_human(product.sales_count, format: "%n%u", units: { thousand: "k" }) %></span>
                    <span class="flex items-center gap-0.5 text-gray-800 font-bold">
                        <svg class="w-2.5 h-2.5 text-black fill-current" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                        4.8
                        <span class="text-gray-400 font-normal">(50+)</span>
                    </span>
                </div>
            </div>
            
            <!-- Badges -->
            <div class="flex gap-1 mt-2">
                <span class="px-1 py-0.5 bg-gray-100 text-[9px] text-gray-500 font-medium rounded-sm">무료배송</span>
                <% if index < 3 %>
                     <span class="px-1 py-0.5 bg-red-100 text-[9px] text-red-600 font-bold rounded-sm">쿠폰</span>
                <% end %>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
